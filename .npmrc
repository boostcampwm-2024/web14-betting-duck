node-linker=hoisted #의존성을 루트 디렉토리로 호이스팅하여 중복 설치 방지
shamefully-hoist=true # pnpm의 엄격한 node_modules 구조를 완화
strict-peer-dependencies=false # peer dependency 관련 경고 완화
auto-install-peers=true # peer dependency 자동 설치
workspace-concurrency=4 # 동시에 실행할 수 있는 워크스페이스 작업 수 제한
shared-workspace-lockfile=false
prefer-workspace-packages=true
